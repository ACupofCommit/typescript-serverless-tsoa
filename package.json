{
  "name": "typescript-serverless-tsoa",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "tsoa": "ts-node -- tsoa.ts",
    "tsoa:watch": "nodemon --config nodemon-tsoa.json",
    "sls:offline": "sls offline start --httpPort=${HTTP_PORT:-3000}",
    "dev": "concurrently yarn:sls:offline yarn:tsoa:watch",
    "deploy": "yarn tsoa && sls deploy --verbose"
  },
  "dependencies": {
    "aws-serverless-express": "^3.4.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "source-map-support": "^0.5.19",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.4.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.16.1",
    "@types/aws-lambda": "^8.10.68",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/node": "^12.19.11",
    "@types/swagger-ui-express": "^4.1.2",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "serverless": "^2.16.1",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.2.0",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-node-externals": "^2.5.2"
  },
  "author": {
